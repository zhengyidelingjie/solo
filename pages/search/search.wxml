<view class="container">
  <view class="header {{scrollDown?'scrolled':''}}">
    <view class="search">
      <image class="icon" src="{{img_url}}index/icon_search.png" />
      <input bindinput="inputSearch" placeholder="输入你想要的食材" auto-focus />
      <icon type="clear" size="15" hidden="{{!showResult}}"/>
    </view>
    <button type="warn" size="mini" bindtap="doSearch">搜索</button>
  </view>

